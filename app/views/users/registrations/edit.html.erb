


<section class="flat-row flat-login parallax1">
			<div class="container">
				<div class="row">
					<div class="col-lg-2">
					</div><!-- /.col-lg-2 -->
					<div class="col-lg-4 col-sm-6">
						<div class="login-form">
							<h3>회원 정보 수정</h3>
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.error_notification %>
								<!-- <div class="wrap-login firstname">
									<label>First name</label>
									<input type="text" class="first-name" name="firstname">
								</div>
								<div class="wrap-login lastname">
									<label>Last name</label>
									<input type="text" class="last-name" name="lastname">
								</div> -->
								<div class="wrap-login">
                  <%= f.input :email, required: true, autofocus: true %>

                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                  <% end %>
								</div>
                <hr>
                <div class="wrap-login">
                  <%= f.input :current_password, hint: "비밀번호를 바꾸기 위해 현재 비밀번호를 입력해주세요", required: true %>
                </div>
								<div class="wrap-login">
                    <%= f.input :password, autocomplete: "off", hint: "변경을 원하시진 않으면 공백으로 두세요", required: false %>
								</div>
                <div class="wrap-login">
                  <%= f.input :password_confirmation, required: false %>
								</div>

                <hr>
                <div class="wrap-login">
                  <%= f.input :name %>
								</div>

								<div class="btn-more">
                  <%= f.button :submit,"수정 하기" %><br />
								</div>
              <% end %>
						</div><!-- /.login-form style2 -->
					</div><!-- /.col-lg-4 col-sm-6 -->
					<div class="col-lg-5 col-sm-6">
            <div class="login-social">

              <%= link_to "선호도 변경"%>

              <hr />

              <p>회원 탈퇴 하시겠습니까?
              <%= link_to "회원 탈퇴", registration_path(resource_name), data: { confirm: "진짜로요?" }, method: :delete %></p>

              <%= link_to "뒤로가기", :back %>
							<!-- <a href="#" class="facebook" title=""><span class="ti-facebook"></span>Login with Facebook</a>
							<p>or</p>
							<a href="#" class="twitter" title=""><span class="ti-twitter-alt"></span>Login with Twitter</a> -->
						</div><!-- /.login-social -->
					</div><!-- /.col-lg-5 col-sm-6 -->
					<div class="col-lg-1">
					</div><!-- /.col-lg-1 -->
				</div><!-- /.row -->
			</div><!-- /.container -->
			<div class="overlay"></div>
		</section><!-- /.flat-login style2 -->
