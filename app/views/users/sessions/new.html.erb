
<section class="flat-row flat-login parallax1">
			<div class="container">
				<div class="row">
					<div class="col-lg-2">
					</div><!-- /.col-lg-2 -->
					<div class="col-lg-4 col-sm-6">
						<div class="login-form">
							<h3>환영합니다!</h3>
              <!-- <h3>다양한 해택을 누리세요</h3> -->
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
								<div class="wrap-login">
									<%= f.input :email, required: false, autofocus: true %>
								</div>
								<div class="wrap-login">
                  <%= f.input :password, required: false %>
								</div>
								<!-- 수정 요망 -->
								<div class="wrap-login remember">
									<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "비밀번호를 잊어 버리셨나요?", new_password_path(resource_name), { class: "forgot" }%><br />
                  <% end -%>
								</div>
								<div class="wrap-login remember">
									<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
									  <%= link_to "아직 회원이 아니신가요?", new_registration_path(resource_name), { class: "forgot" } %><br />
									<% end -%>
								</div>
								<div class="btn-more">
                  <!-- <%= link_to "Log in", new_user_session_path %> -->
									<%= f.button :submit,"Log in" %><br />
									<br />
								</div>
              <% end %>
						</div><!-- /.login-form -->
					</div><!-- /.col-lg-4 -->
					<div class="col-lg-5 col-sm-6">
						<div class="login-social">
							<div>당신의 SNS 계정을 통해 빠르게 다나아를 이용하세요.</div>
              <%= render "users/shared/links" %>
							<!-- <a href="#" class="facebook" title=""><span class="ti-facebook"></span>Login with Facebook</a>
							<p>or</p>
							<a href="#" class="twitter" title=""><span class="ti-twitter-alt"></span>Login with Twitter</a> -->
						</div><!-- /.login-social -->
					</div><!-- /.col-lg-5 -->
					<div class="col-lg-1">
					</div><!-- /.col-lg-1 -->
				</div><!-- /.row -->
			</div><!-- /.container -->
			<div class="overlay"></div>
		</section><!-- /.flat-login -->

